<h1> Add a new bike </h1>

<%= form_tag '/create', method: :post do %>

  <div>
    <%= label_tag :type_of_bike %>:
    <%= text_field_tag :type_of_bike %>
  </div>

  <div>
    <%= label_tag :size_of_bike %>:
    <%= text_field_tag :size_of_bike %>
  </div>

  <div>
    <%= submit_tag "submit" %>
  </div>

<% end %>